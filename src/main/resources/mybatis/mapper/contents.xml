	<update id="boardUpdate"
		parameterType="com.toris93.nanjung.web.domain.ContentsVO">
		UPDATE CONTENTS
		SET
		<if test="subject != null">
			SUBJECT = #{subject}
		</if>
		<if test="subject != null and content != null"> , </if>
		<if test="content != null">
			CONTENT = #{content}
		</if>
		WHERE BNO = #{bno}
	</update>

	<delete id="boardDelete" parameterType="int">
		DELETE FROM CONTENTS WHERE BNO = #{bno}
	</delete>

 </mapper>