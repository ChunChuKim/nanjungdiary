<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toris93.nanjung.web.dao.ContentsMapper"> 

<select id="boardCount" resultType="int">
		SELECT
		COUNT(*)
		FROM CONTENTS
	</select>
	<select id="getContentsList"
		resultType="com.toris93.nanjung.web.domain.ContentsVO">
		SELECT
		*
		FROM contents
	</select>

	<select id="boardDetail" parameterType="int"
		resultType="com.toris93.nanjung.web.domain.ContentsVO">
		SELECT
		*
		FROM CONTENTS
		WHERE
		BNO = #{bno}
	</select>

	<insert id="boardInsert"
		parameterType="com.toris93.nanjung.web.domain.ContentsVO"
		useGeneratedKeys="true" keyProperty="bno">
		INSERT INTO
		CONTENTS (BNO, SUBJECT,CONTENT,WRITER,REG_DATE)
		VALUES(#{bno},#{subject},#{content},#{writer},now())
	</insert>
